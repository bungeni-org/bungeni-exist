<?xml version="1.0" encoding="UTF-8"?>
<workflow name="workflow" title="Undefined Workflow" description="A Workflow description">
    <tags originAttr="tags">
        <tag/>
    </tags>
    <permActions originAttr="permission_actions">
        <permAction>.View</permAction>
        <permAction>.Edit</permAction>
        <permAction>.Add</permAction>
        <permAction>.Delete</permAction>
    </permActions>
    
    <!-- global grants -->
    <allow permission=".Add">
        <roles originAttr="roles">
            <role/>
        </roles>
    </allow>
    <feature name="undefined" enabled="true">
        <facet name="un_Defined">
            <allow permission="undefined.Undefined">
                <roles originAttr="roles">
                    <role/>
                </roles>
            </allow>
        </facet>
    </feature>
    
    <!-- workflow facets -->
    <facet name="un_Defined">
        <allow permission=".Undefined">
            <roles originAttr="roles">
                <role/>
            </roles>
        </allow>
    </facet>
    <state id="undefined_draft" title="Undefined Draft">
        <tags originAttr="tags">
            <tag/>
        </tags>
        <facet ref=".none"/>
    </state>
    <transition title="Undefined Title" condition="undefined_condition" trigger="automatic" order="0">
        <sources originAttr="source"/>
        <destinations originAttr="destination">
            <destination/>
        </destinations>
    </transition>
</workflow>