<?xml version="1.0" encoding="UTF-8"?>
<features>
    
    <!-- feature registry -->    
    
    <feature name="signatory" enabled="true">
        <parameter name="min_signatories" type="xs:integer" />
        <parameter name="max_signatories" type="xs:integer" />
        <parameter name="open_states" type="ncStates" />
    </feature>
    
    <feature name="event" enabled="true">
        <parameter name="types" value="ncEventTypes" />
    </feature>
    
    <feature name="schedule" enabled="true">
        <parameter name="schedulable_states" value="ncStates" />
        <parameter name="scheduled_states" value="ncStates" />
    </feature>
    
    <feature name="download" enabled="true">
        <parameter name="allowed_types" value="ncDownTypes"/>
    </feature>
    
    <feature name="audit" enabled="true" />

    <feature name="version" enabled="true" />

    <feature name="attachment" enabled="true" />

    <feature name="workspace" enabled="true" />

    <feature name="notification" enabled="true" />

    <feature name="email" enabled="true" />

    <feature name="group_assignment" enabled="true" />
    
</features>    

