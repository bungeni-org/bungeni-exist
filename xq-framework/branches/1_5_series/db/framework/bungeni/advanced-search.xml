            <div id="adv-search-wrapper" style="margin:0 auto;width:96%;height:50%;padding:5px;">
                <form method="GET" action="advanced-search" id="ui_search" name="search_sort" autocomplete="off">
                    <fieldset>
                        <legend>&#160;Find documents with&#160;</legend>
                        <div class="row">
                            <span class="label" for="all-words">all these words:</span>
                            <span class="formw">
                                <input id="all-words" class="search_for" type="text"/>
                            </span>
                            <span class="example">E.g. Type the key words <span class="mono">withdrawn public approved</span>
                            </span>
                        </div>
                        <div class="row">
                            <span class="label">the exact words or phrase:</span>
                            <span class="formw">
                                <input type="text" class="search_for"/>
                            </span>
                            <span class="example">E.g. <span class="mono">"object of the Bill is to"</span>  with quotes</span>
                        </div>
                        <div class="row">
                            <span class="label">contains any of these words:</span>
                            <span class="formw">
                                <input type="text" class="search_for"/>
                            </span>
                            <span class="example">E.g. <span class="mono">withdrawn OR approved</span> with the OR</span>
                        </div>
                        <div class="row">
                            <span class="label">&#160;</span>
                            <span class="formw">
                                <input class="button" value="i18n(btn-adv-search,search)" type="submit"/>
                            </span>
                            <span class="example">&#160;</span>
                        </div>
                    </fieldset>
                    <fieldset>
                        <legend>&#160;Filter the returned results by&#160;</legend>
                        <div class="row">
                            <span class="label" for="all-words">
                                select scope of documents to filter in:
                                <ul>
                                    <li>question <input type="checkbox" name="question"/>
                                    </li>
                                    <li>motion <input type="checkbox" name="motion"/>
                                    </li>
                                    <li>agenda items <input type="checkbox" name="agendas"/>
                                    </li>
                                    <li>bills <input type="checkbox" name="bills"/>
                                    </li>
                                    <li>tabled documents <input type="checkbox" name="tableddocs"/>
                                    </li>
                                    <li>committees <input type="checkbox" name="committees"/>
                                    </li>
                                    <li>members <input type="checkbox" name="members"/>
                                    </li>
                                </ul>
                            </span>
                            <span class="middle">
                                <label for="startdate">
                                    First name
                                    <input id="startdate" name="startdate" type="text" value="Start Date"/>
                                </label>
                                <br/>
                                <label for="enddate">
                                    End name
                                    <input id="enddate" name="enddate" type="text" value="End Date"/>
                                </label>
                            </span>
                            <span class="example">
                                <input class="button" value="i18n(btn-adv-search,search)" type="submit"/>
                            </span>
                        </div>
                        <div class="spacer">
                            &#160;
                        </div>
