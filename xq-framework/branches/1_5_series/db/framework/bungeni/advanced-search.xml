<?xml version="1.0" encoding="UTF-8"?>
<div xmlns="http://www.w3.org/1999/xhtml" xmlns:i18n="http://exist-db.org/xquery/i18n" id="content">
    <div id="main-wrapper">
        <div id="title-holder" class="theme-lev-1-only">
            <h1 id="doc-title-blue">
                <i18n:text key="adv-search">Advanced Search(nt)</i18n:text>
            </h1>
        </div>
        <div id="region-content" class="rounded-eigh tab_container" role="main">
            <div id="adv-search-wrapper">
                <form method="GET" action="search-adv" id="ui_search" name="search_sort" autocomplete="off">
                    <input type="hidden" id="exist_path" name="exist_path" value="/search-adv"/>
                    <input name="st" type="hidden" value="adv"/>
                    <fieldset>
                        <legend>&#160;Find documents with&#160;</legend>
                        <div class="row">
                            <span class="label" for="all-words">all these words:</span>
                            <span class="formw">
                                <input id="all-words" name="qa" class="search_for" type="text"/>
                            </span>
                            <span class="example">E.g. Type the key words <span class="mono">withdrawn public approved</span>
                            </span>
                        </div>
                        <div class="row">
                            <span class="label">the exact words or phrase:</span>
                            <span class="formw">
                                <input type="text" name="qe" class="search_for"/>
                            </span>
                            <span class="example">E.g. <span class="mono">"object of the Bill is to"</span>  with quotes</span>
                        </div>
                        <div class="row">
                            <span class="label">contains any of these words:</span>
                            <span class="formw">
                                <input type="text" name="qh" class="search_for"/>
                            </span>
                            <span class="example">E.g. <span class="mono">withdrawn OR approved</span> with the OR</span>
                        </div>
                    </fieldset>
                    <fieldset>
                        <legend>&#160;Filter the returned results by&#160;</legend>
                        <div class="row">
                            <div class="b-left" id="search-groups">
                                <!-- categorized doctypes will be rendered here -->
                            </div>
                            <div class="b-right">
                                <label for="status">
                                    select status 
                                    <div>
                                        <select id="status" name="doc_status">
                                            <option value="st_date_newest">status date newest</option>
                                            <option value="st_date_oldest">status date oldest</option>
                                        </select>
                                    </div>
                                </label>
                                <br/>
                                <br/>
                                <label for="startdate">
                                    start date
                                    <div>
                                        <input id="startdate" name="startdate" type="text" value="start date"/>
                                        <button type="button" class="Zebra_DatePicker_Icon Zebra_DatePicker_Icon_Inside" style="left: -40px; top: 0.5px; ">Pick a date</button>
                                    </div>
                                </label>
                                <br/>
                                <label for="enddate">
                                    end date
                                    <div>
                                        <input id="enddate" name="enddate" type="text" value="end date"/>
                                        <button type="button" class="Zebra_DatePicker_Icon Zebra_DatePicker_Icon_Inside" style="left: -40px; top: 0.5px; ">Pick a date</button>
                                    </div>
                                </label>
                                <div class="b-right">
                                    <input class="button" value="i18n(btn-adv-search,search)" type="submit"/>
                                </div>
                            </div>
                        </div>
                        <div class="spacer">
                            &#160;
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>