<?xml version="1.0" encoding="UTF-8"?>
<div xmlns="http://www.w3.org/1999/xhtml" xmlns:i18n="http://exist-db.org/xquery/i18n" id="search-form">
    <form method="GET" action="search" id="ui_search" name="search_sort" autocomplete="off">
        <input type="hidden" id="doc_type" name="type" value=""/>
        <input type="hidden" id="exist_path" name="exist_path" value=""/>
        <label class="search_for" for="search_for">
            <i18n:text key="listing-search">Search text(nt)</i18n:text>:&#160;</label>
        <dl id="sb_box" class="dropdown">
            <dt>
                <input id="search_for" name="q" class="search_for" type="text" value=""/>
                <a class="inline" href="#"/>
            </dt>
            <dd>
                <ul id="filter_by" class="sb_dropdown">
                    <li class="sb_filter">Filter your search</li>
                    <li>
                        <input type="checkbox" name="all" value="on"/>
                        <label for="all">
                            <b>Entire Document</b>
                        </label>
                    </li>
                </ul>
            </dd>
        </dl>
        <div class="inline">
            <label for="search_in">
                <i18n:text key="sort-by">sort by(nt)</i18n:text>:</label>
            <select name="s" id="sort_by">
                <option value=""/>
            </select>
            <input value="i18n(btn-search,search)" type="submit"/>
        </div>
    </form>
</div>