<?xml version="1.0" encoding="UTF-8"?>
<workflow title="Attachment Workflow" description="Workflow for attachments" tags="draft private public" permission_actions=".View .Edit .Add .Delete">
    
    <!-- sub-item: NO global grants -->
    
    <!-- features -->
    <feature name="audit" enabled="true"/>
    <feature name="version" enabled="true"/><!-- !+SHOULD be enabled (both 
    audit and version) if parent documents are to be able to include such 
    changes in their audit/version log -->
    <!-- !+attachments may NOT recursivley support other attachments -->
    <state id="draft" title="Draft Event" tags="draft private">
        <!-- event -->
        <deny permission="bungeni.attachment.View" role="bungeni.Clerk"/>
        <deny permission="bungeni.attachment.View" role="bungeni.Speaker"/>
        <grant permission="bungeni.attachment.View" role="bungeni.Owner"/>
        <deny permission="bungeni.attachment.View" role="bungeni.Signatory"/>
        <deny permission="bungeni.attachment.View" role="bungeni.MP"/>
        <deny permission="bungeni.attachment.View" role="bungeni.Minister"/>
        <deny permission="bungeni.attachment.View" role="bungeni.Anonymous"/>
        <deny permission="bungeni.attachment.Edit" role="bungeni.Clerk"/>
        <deny permission="bungeni.attachment.Edit" role="bungeni.Speaker"/>
        <grant permission="bungeni.attachment.Edit" role="bungeni.Owner"/>
        <deny permission="bungeni.attachment.Delete" role="bungeni.Clerk"/>
        <deny permission="bungeni.attachment.Delete" role="bungeni.Speaker"/>
        <grant permission="bungeni.attachment.Delete" role="bungeni.Owner"/>
    </state>
    <state id="attached" title="Attachment" tags="public" permissions_from_parent="true"/>
    <state id="internal" title="Published Internal" like_state="draft">
        <!-- attachment -->
        <grant permission="bungeni.attachment.View" role="bungeni.Clerk"/>
        <grant permission="bungeni.attachment.View" role="bungeni.Speaker"/>
        <grant permission="bungeni.attachment.View" role="bungeni.Signatory"/>
        <grant permission="bungeni.attachment.View" role="bungeni.MP"/>
        <grant permission="bungeni.attachment.View" role="bungeni.Minister"/>
        <grant permission="bungeni.attachment.Edit" role="bungeni.Clerk"/>
        <grant permission="bungeni.attachment.Edit" role="bungeni.Speaker"/>
        <deny permission="bungeni.attachment.Edit" role="bungeni.Owner"/>
        <grant permission="bungeni.attachment.Delete" role="bungeni.Clerk"/>
        <grant permission="bungeni.attachment.Delete" role="bungeni.Speaker"/>
        <deny permission="bungeni.attachment.Delete" role="bungeni.Owner"/>
    </state>
    
    <!-- !+inactive(mr, aug-2011) review usage and rename across the board -->
    <state id="inactive" title="Inactive file" like_state="internal">
        <!-- attachment -->
        <deny permission="bungeni.attachment.Edit" role="bungeni.Clerk"/>
        <deny permission="bungeni.attachment.Edit" role="bungeni.Speaker"/>
        <!-- !+delete also deny? -->
    </state>
    
    
    <!-- !+IDENTICAL_TRANSITIONS(mr, sep-2011) attachment, address, event -->
    <transition title="Create" source="" destination="draft" condition="context_parent_is_not_draft" trigger="automatic"/>
    <transition title="Create" source="" destination="attached" condition="context_parent_is_draft" trigger="automatic"/>
    <transition title="Publish" source="draft" destination="attached" trigger="manual" roles="bungeni.Owner"/>
    <transition title="Publish Internal" source="draft" destination="internal" trigger="manual" roles="bungeni.Owner"/>
    <transition title="Re-publish" source="internal" destination="attached" trigger="manual" roles="bungeni.Clerk bungeni.Owner"/>
    
    <!-- 
    if the parent has been published (i.e. is public, assuming that once 
    published it is never retracted) we do not want to allow transitioning away 
    from "attached".
    -->
    <transition title="Publish Internal" source="attached" destination="internal" condition="context_parent_is_not_public" trigger="manual" roles="bungeni.Clerk bungeni.Owner"/>
    <transition title="Deactivate" source="attached internal" destination="inactive" condition="context_parent_is_not_public" trigger="manual" roles="bungeni.Clerk bungeni.Owner" require_confirmation="true"/>
</workflow>