<?xml version="1.0" encoding="UTF-8"?>
<workflow title="Group Workflow" description="Workflow for Parliamentary Groups" tags="public" permission_actions="         .View .Edit .Add .Delete         government.View government.Edit government.Add government.Delete         ministry.View ministry.Edit ministry.Add ministry.Delete         office.View office.Edit office.Add office.Delete         political_group.View political_group.Edit political_group.Add political_group.Delete     ">
    <feature name="address" enabled="true"/>
    
    <!-- global grants !+shared_workflow -->
    <grant permission="bungeni.government.Edit" role="bungeni.Clerk"/>
    <grant permission="bungeni.government.Add" role="bungeni.Clerk"/>
    <grant permission="bungeni.government.Delete" role="bungeni.Clerk"/>
    <grant permission="bungeni.ministry.Edit" role="bungeni.Clerk"/>
    <grant permission="bungeni.ministry.Add" role="bungeni.Clerk"/>
    <grant permission="bungeni.ministry.Delete" role="bungeni.Clerk"/>
    <grant permission="bungeni.office.Edit" role="bungeni.Clerk"/>
    <grant permission="bungeni.office.Add" role="bungeni.Clerk"/>
    <grant permission="bungeni.office.Delete" role="bungeni.Clerk"/>
    <grant permission="bungeni.political_group.Edit" role="bungeni.Clerk"/>
    <grant permission="bungeni.political_group.Add" role="bungeni.Clerk"/>
    <grant permission="bungeni.political_group.Delete" role="bungeni.Clerk"/>
    <state id="draft" title="Draft - Group not yet Active">
        <!-- group -->
        <grant permission="bungeni.group.View" role="bungeni.Clerk"/>
        <deny permission="bungeni.group.View" role="bungeni.Speaker"/>
        <deny permission="bungeni.group.View" role="bungeni.MP"/>
        <deny permission="bungeni.group.View" role="bungeni.Minister"/>
        <deny permission="bungeni.group.View" role="bungeni.Anonymous"/>
        <!-- !+shared_workflow other group-type Views -->
        <grant permission="bungeni.government.View" role="bungeni.Clerk"/>
        <grant permission="bungeni.ministry.View" role="bungeni.Clerk"/>
        <grant permission="bungeni.office.View" role="bungeni.Clerk"/>
        <grant permission="bungeni.political_group.View" role="bungeni.Clerk"/>
        <!-- !+PERM_NOT_REG grant permission="bungeni.group.Delete" role="bungeni.Owner" /-->
        <!-- group_membership -->
        <deny permission="bungeni.group_membership.Edit" role="bungeni.Clerk"/>
        <deny permission="bungeni.group_membership.Add" role="bungeni.Clerk"/>
        <deny permission="bungeni.group_membership.Delete" role="bungeni.Clerk"/>
        <!-- address -->
        <grant permission="bungeni.address.Edit" role="bungeni.Clerk"/>
        <grant permission="bungeni.address.Edit" role="bungeni.Owner"/>
        <grant permission="bungeni.address.Add" role="bungeni.Clerk"/>
        <grant permission="bungeni.address.Add" role="bungeni.Owner"/>
        <grant permission="bungeni.address.Delete" role="bungeni.Clerk"/>
        <grant permission="bungeni.address.Delete" role="bungeni.Owner"/>
    </state>
    <state id="active" title="Active Group" like_state="draft" tags="public">
        <!-- group -->
        <grant permission="bungeni.group.View" role="bungeni.Speaker"/>
        <grant permission="bungeni.group.View" role="bungeni.MP"/>
        <grant permission="bungeni.group.View" role="bungeni.Minister"/>
        <grant permission="bungeni.group.View" role="bungeni.Anonymous"/>
        <!-- !+PERM_NOT_REG deny permission="bungeni.group.Delete" role="bungeni.Owner" /-->
        <!-- group_membership -->
        <grant permission="bungeni.group_membership.Edit" role="bungeni.Clerk"/>
        <grant permission="bungeni.group_membership.Add" role="bungeni.Clerk"/>
        <grant permission="bungeni.group_membership.Delete" role="bungeni.Clerk"/>
    </state>
    <state id="dissolved" title="Group is Dissolved" like_state="active" tags="public">
        <!-- group_membership -->
        <deny permission="bungeni.group_membership.Edit" role="bungeni.Clerk"/>
        <deny permission="bungeni.group_membership.Add" role="bungeni.Clerk"/>
        <deny permission="bungeni.group_membership.Delete" role="bungeni.Clerk"/>
        <!-- address -->
        <deny permission="bungeni.address.Edit" role="bungeni.Clerk"/>
        <deny permission="bungeni.address.Edit" role="bungeni.Owner"/>
        <deny permission="bungeni.address.Add" role="bungeni.Clerk"/>
        <deny permission="bungeni.address.Add" role="bungeni.Owner"/>
        <deny permission="bungeni.address.Delete" role="bungeni.Clerk"/>
        <deny permission="bungeni.address.Delete" role="bungeni.Owner"/>
    </state>
    <transition title="Create" source="" destination="draft" trigger="automatic"/>
    <transition title="Activate" source="draft dissolved" destination="active" trigger="manual" roles="bungeni.Clerk bungeni.Speaker" require_confirmation="true"/>
    <transition title="Dissolve" source="active" destination="dissolved" condition="has_end_date" trigger="manual" roles="bungeni.Clerk bungeni.Speaker" require_confirmation="true"/>
    
    <!-- !+ why back to "draft"? -->
    <transition title="Deactivate" source="active" destination="draft" trigger="manual" roles="bungeni.Clerk bungeni.Speaker" require_confirmation="true"/>
</workflow>