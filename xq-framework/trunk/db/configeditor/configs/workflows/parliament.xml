<?xml version="1.0" encoding="UTF-8"?>
<workflow title="Parliament Workflow" description="Workflow for parliaments" tags="public" permission_actions=".View .Edit .Add .Delete">
    <feature name="address" enabled="true"/>
    
    <!-- global grants -->
    <grant permission="bungeni.parliament.Add" role="bungeni.Clerk"/>
    <grant permission="bungeni.parliament.Edit" role="bungeni.Clerk"/>
    <grant permission="bungeni.parliament.Delete" role="bungeni.Clerk"/>
    <state id="draft" title="Draft - Parliament not yet Active">
        <!-- parliament -->
        <grant permission="bungeni.parliament.View" role="bungeni.Clerk"/>
        <deny permission="bungeni.parliament.View" role="bungeni.Speaker"/>
        <deny permission="bungeni.parliament.View" role="bungeni.Owner"/>
        <deny permission="bungeni.parliament.View" role="bungeni.Signatory"/>
        <deny permission="bungeni.parliament.View" role="bungeni.MP"/>
        <deny permission="bungeni.parliament.View" role="bungeni.Minister"/>
        <deny permission="bungeni.parliament.View" role="bungeni.Anonymous"/>
        <grant permission="bungeni.parliament.Delete" role="bungeni.Owner"/>
        <!-- group_membership -->
        <deny permission="bungeni.group_membership.Edit" role="bungeni.Clerk"/>
        <deny permission="bungeni.group_membership.Add" role="bungeni.Clerk"/>
        <deny permission="bungeni.group_membership.Delete" role="bungeni.Clerk"/>
    </state>
    <state id="active" title="Active Parliament" like_state="draft" tags="public">
        <!-- parliament -->
        <grant permission="bungeni.parliament.View" role="bungeni.Speaker"/>
        <grant permission="bungeni.parliament.View" role="bungeni.Owner"/>
        <grant permission="bungeni.parliament.View" role="bungeni.Signatory"/>
        <grant permission="bungeni.parliament.View" role="bungeni.MP"/>
        <grant permission="bungeni.parliament.View" role="bungeni.Minister"/>
        <grant permission="bungeni.parliament.View" role="bungeni.Anonymous"/>
        <deny permission="bungeni.parliament.Delete" role="bungeni.Owner"/>
        <!-- group_membership -->
        <grant permission="bungeni.group_membership.Edit" role="bungeni.Clerk"/>
        <grant permission="bungeni.group_membership.Add" role="bungeni.Clerk"/>
        <grant permission="bungeni.group_membership.Delete" role="bungeni.Clerk"/>
    </state>
    <state id="dissolved" title="Parliament is Dissolved" like_state="active" tags="public">
        <!-- group_membership -->
        <deny permission="bungeni.group_membership.Edit" role="bungeni.Clerk"/>
        <deny permission="bungeni.group_membership.Add" role="bungeni.Clerk"/>
        <deny permission="bungeni.group_membership.Delete" role="bungeni.Clerk"/>
    </state>
    <transition title="Create" source="" destination="draft" trigger="automatic"/>
    <transition title="Activate" source="draft dissolved" destination="active" trigger="manual" roles="bungeni.Clerk bungeni.Speaker" require_confirmation="true"/>
    <transition title="Dissolve" source="active" destination="dissolved" condition="has_end_date" trigger="manual" roles="bungeni.Clerk bungeni.Speaker" require_confirmation="true"/>
    <transition title="Deactivate" source="active dissolved" destination="draft" trigger="manual" roles="bungeni.Clerk bungeni.Speaker" require_confirmation="true"/>
</workflow>