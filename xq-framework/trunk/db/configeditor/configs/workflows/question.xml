<?xml version="1.0" encoding="UTF-8"?>
<workflow title="Question Workflow" description="A question" tags="draft private public         approved tobescheduled scheduled         actionclerk actionmp         terminal succeed fail         oral written     " permission_actions=".View .Edit .Add .Delete">
    
    <!-- features -->
    <feature name="audit" enabled="true"/>
    <feature name="version" enabled="true"/>
    <feature name="attachment" enabled="true"/>
    <feature name="event" enabled="true"/>
    <feature name="signatory" enabled="true"/>
    <feature name="schedule" enabled="true"/>
    <feature name="workspace" enabled="true"/>
    <feature name="notification" enabled="true"/>
    <feature name="download" enabled="true"/>
    <feature name="user_assignment" enabled="true">
        <parameter name="assigner_roles" value="bungeni.Clerk.HeadClerk"/>
        <parameter name="assignable_roles" value="bungeni.Clerk.QuestionClerk"/>
    </feature>
    
    <!-- global grants -->
    <grant permission="bungeni.question.Add" role="bungeni.Clerk"/>
    <grant permission="bungeni.question.Add" role="bungeni.MP"/>
    <state id="working_draft" title="Working Draft" tags="draft private">
        <!-- question -->
        <grant permission="bungeni.question.View" role="bungeni.Clerk"/>
        <deny permission="bungeni.question.View" role="bungeni.Speaker"/>
        <deny permission="bungeni.question.View" role="bungeni.Owner"/>
        <deny permission="bungeni.question.View" role="bungeni.Signatory"/>
        <deny permission="bungeni.question.View" role="bungeni.MP"/>
        <deny permission="bungeni.question.View" role="bungeni.Minister"/>
        <deny permission="bungeni.question.View" role="bungeni.Anonymous"/>
        <grant permission="bungeni.question.Edit" role="bungeni.Clerk"/>
        <deny permission="bungeni.question.Edit" role="bungeni.Speaker"/>
        <deny permission="bungeni.question.Edit" role="bungeni.Owner"/>
        <grant permission="bungeni.question.Delete" role="bungeni.Clerk"/>
        <deny permission="bungeni.question.Delete" role="bungeni.Speaker"/>
        <deny permission="bungeni.question.Delete" role="bungeni.Owner"/>
        <!-- attachment -->
        <grant permission="bungeni.attachment.Edit" role="bungeni.Clerk"/>
        <deny permission="bungeni.attachment.Edit" role="bungeni.Speaker"/>
        <deny permission="bungeni.attachment.Edit" role="bungeni.Owner"/>
        <grant permission="bungeni.attachment.Add" role="bungeni.Clerk"/>
        <deny permission="bungeni.attachment.Add" role="bungeni.Speaker"/>
        <deny permission="bungeni.attachment.Add" role="bungeni.Owner"/>
        <grant permission="bungeni.attachment.Delete" role="bungeni.Clerk"/>
        <deny permission="bungeni.attachment.Delete" role="bungeni.Speaker"/>
        <deny permission="bungeni.attachment.Delete" role="bungeni.Owner"/>
        <!-- event -->
        <grant permission="bungeni.event.View" role="bungeni.Clerk"/>
        <grant permission="bungeni.event.View" role="bungeni.Speaker"/>
        <grant permission="bungeni.event.View" role="bungeni.Signatory"/>
        <grant permission="bungeni.event.View" role="bungeni.MP"/>
        <grant permission="bungeni.event.View" role="bungeni.Minister"/>
        <grant permission="bungeni.event.Edit" role="bungeni.Clerk"/>
        <grant permission="bungeni.event.Edit" role="bungeni.Speaker"/>
        <grant permission="bungeni.event.Add" role="bungeni.Clerk"/>
        <grant permission="bungeni.event.Add" role="bungeni.Speaker"/>
        <grant permission="bungeni.event.Delete" role="bungeni.Clerk"/>
        <grant permission="bungeni.event.Delete" role="bungeni.Speaker"/>
        <!-- response -->
        <deny permission="bungeni.response.View" role="bungeni.Clerk"/>
        <deny permission="bungeni.response.View" role="bungeni.Speaker"/>
        <deny permission="bungeni.response.View" role="bungeni.Owner"/>
        <deny permission="bungeni.response.View" role="bungeni.Signatory"/>
        <deny permission="bungeni.response.View" role="bungeni.MP"/>
        <deny permission="bungeni.response.View" role="bungeni.Minister"/>
        <deny permission="bungeni.response.View" role="bungeni.Anonymous"/>
        <deny permission="bungeni.response.Edit" role="bungeni.Signatory"/>
        <deny permission="bungeni.response.Edit" role="bungeni.Minister"/>
        <!-- signatories -->
        <grant permission="bungeni.signatory.Add" role="bungeni.Clerk"/>
        <deny permission="bungeni.signatory.Add" role="bungeni.Owner"/>
        <grant permission="bungeni.signatory.Delete" role="bungeni.Clerk"/>
        <deny permission="bungeni.signatory.Delete" role="bungeni.Owner"/>
        <!-- user assignment -->
        <deny permission="bungeni.user_assignment.View" role="bungeni.Clerk.HeadClerk"/>
        <deny permission="bungeni.user_assignment.Edit" role="bungeni.Clerk.HeadClerk"/>
    </state>
    <state id="draft" title="Draft" like_state="working_draft" tags="draft private">
        <!-- question -->
        <deny permission="bungeni.question.View" role="bungeni.Clerk"/>
        <grant permission="bungeni.question.View" role="bungeni.Owner"/>
        <deny permission="bungeni.question.Edit" role="bungeni.Clerk"/>
        <grant permission="bungeni.question.Edit" role="bungeni.Owner"/>
        <deny permission="bungeni.question.Delete" role="bungeni.Clerk"/>
        <grant permission="bungeni.question.Delete" role="bungeni.Owner"/>
        <!-- attachment -->
        <deny permission="bungeni.attachment.Edit" role="bungeni.Clerk"/>
        <grant permission="bungeni.attachment.Edit" role="bungeni.Owner"/>
        <deny permission="bungeni.attachment.Add" role="bungeni.Clerk"/>
        <grant permission="bungeni.attachment.Add" role="bungeni.Owner"/>
        <deny permission="bungeni.attachment.Delete" role="bungeni.Clerk"/>
        <grant permission="bungeni.attachment.Delete" role="bungeni.Owner"/>
        <!-- signatories -->
        <deny permission="bungeni.signatory.Add" role="bungeni.Clerk"/>
        <grant permission="bungeni.signatory.Add" role="bungeni.Owner"/>
        <deny permission="bungeni.signatory.Delete" role="bungeni.Clerk"/>
        <grant permission="bungeni.signatory.Delete" role="bungeni.Owner"/>
    </state>
    <state id="submitted_signatories" title="Submitted to Signatories" version="true" like_state="draft" tags="actionmp">
        <!-- question -->
        <grant permission="bungeni.question.View" role="bungeni.Signatory"/>
        <deny permission="bungeni.question.Edit" role="bungeni.Owner"/>
        <deny permission="bungeni.question.Delete" role="bungeni.Owner"/>
        <!-- attachment -->
        <deny permission="bungeni.attachment.Edit" role="bungeni.Owner"/>
        <deny permission="bungeni.attachment.Add" role="bungeni.Owner"/>
        <deny permission="bungeni.attachment.Delete" role="bungeni.Owner"/>
        <!-- signatory -->
        <deny permission="bungeni.signatory.Delete" role="bungeni.Owner"/>
    </state>
    <state id="redraft" title="Redraft" version="True" like_state="draft" note="document under review before resubmission">
        <deny permission="bungeni.question.Delete" role="bungeni.Owner"/>
    </state>
    <state id="withdrawn_signatory" title="Dropped" like_state="submitted_signatories">
        <!-- signatories -->
        <deny permission="bungeni.signatory.Add" role="bungeni.Owner"/>
    </state>
    <state id="submitted" title="Submitted to clerk" version="true" like_state="submitted_signatories" tags="actionclerk">
        <!-- question -->
        <grant permission="bungeni.question.View" role="bungeni.Clerk"/>
        <grant permission="bungeni.question.View" role="bungeni.Speaker"/>
        <!-- signatory -->
        <deny permission="bungeni.signatory.Add" role="bungeni.Owner"/>
    </state>
    <state id="received" title="Received by clerk" like_state="submitted" tags="actionclerk">
        <!-- question -->
        <grant permission="bungeni.question.Edit" role="bungeni.Clerk"/>
        <!-- attachment -->
        <grant permission="bungeni.attachment.Edit" role="bungeni.Clerk"/>
        <grant permission="bungeni.attachment.Add" role="bungeni.Clerk"/>
        <grant permission="bungeni.attachment.Delete" role="bungeni.Clerk"/>
        <!-- user assignment -->
        <grant permission="bungeni.user_assignment.View" role="bungeni.Clerk.HeadClerk"/>
        <grant permission="bungeni.user_assignment.Edit" role="bungeni.Clerk.HeadClerk"/>
    </state>
    <state id="completed" title="Submitted to the Speaker" version="true" like_state="submitted">
        <!-- question -->
        <grant permission="bungeni.question.Edit" role="bungeni.Speaker"/>
        <!-- attachment -->
        <grant permission="bungeni.attachment.Edit" role="bungeni.Speaker"/>
        <grant permission="bungeni.attachment.Add" role="bungeni.Speaker"/>
        <grant permission="bungeni.attachment.Delete" role="bungeni.Speaker"/>
    </state>
    <state id="admissible" title="Admissible" version="true" like_state="submitted" tags="public approved oral written">
        <!-- question -->
        <grant permission="bungeni.question.View" role="bungeni.Owner"/>
        <grant permission="bungeni.question.View" role="bungeni.Signatory"/>
        <grant permission="bungeni.question.View" role="bungeni.MP"/>
        <grant permission="bungeni.question.View" role="bungeni.Minister"/>
        <grant permission="bungeni.question.View" role="bungeni.Anonymous"/>
    </state>
    <state id="inadmissible" title="Inadmissible" like_state="submitted" tags="terminal fail">
        <!-- event -->
        <deny permission="bungeni.event.Edit" role="bungeni.Clerk"/>
        <deny permission="bungeni.event.Edit" role="bungeni.Speaker"/>
        <deny permission="bungeni.event.Add" role="bungeni.Clerk"/>
        <deny permission="bungeni.event.Add" role="bungeni.Speaker"/>
        <deny permission="bungeni.event.Delete" role="bungeni.Clerk"/>
        <deny permission="bungeni.event.Delete" role="bungeni.Speaker"/>
    </state>
    <state id="clarification_required" title="Requires Clarification to Receive" version="true" like_state="submitted" tags="actionmp">
        <!-- question -->
        <grant permission="bungeni.question.Edit" role="bungeni.Owner"/>
        <!-- attachment -->
        <grant permission="bungeni.attachment.Edit" role="bungeni.Owner"/>
        <grant permission="bungeni.attachment.Add" role="bungeni.Owner"/>
        <grant permission="bungeni.attachment.Delete" role="bungeni.Owner"/>
    </state>
    <state id="incomplete" title="Require Clarification to Approve" version="true" like_state="received" tags="actionclerk"/>
    <state id="schedule_pending" title="Schedule pending" like_state="admissible" tags="public tobescheduled oral"/>
    <state id="scheduled" title="Scheduled" like_state="admissible" tags="public scheduled oral"/>
    <state id="adjourned" title="Debate adjourned" like_state="admissible" tags="public approved"/>
    <state id="response_pending" title="Pending response" like_state="admissible" tags="public written">
        <!-- response -->
        <grant permission="bungeni.response.View" role="bungeni.Minister"/>
        <grant permission="bungeni.response.Edit" role="bungeni.Minister"/>
    </state>
    <state id="response_submitted" title="Response submitted" like_state="response_pending" tags="public actionclerk">
        <!-- response -->
        <deny permission="bungeni.response.Edit" role="bungeni.Minister"/>
        <grant permission="bungeni.response.View" role="bungeni.Clerk"/>
        <grant permission="bungeni.response.View" role="bungeni.Speaker"/>
    </state>
    <state id="response_completed" title="Response completed" like_state="admissible" tags="public terminal succeed">
        <!-- event -->
        <deny permission="bungeni.event.Edit" role="bungeni.Clerk"/>
        <deny permission="bungeni.event.Edit" role="bungeni.Speaker"/>
        <deny permission="bungeni.event.Add" role="bungeni.Clerk"/>
        <deny permission="bungeni.event.Add" role="bungeni.Speaker"/>
        <deny permission="bungeni.event.Delete" role="bungeni.Clerk"/>
        <deny permission="bungeni.event.Delete" role="bungeni.Speaker"/>
        <!-- response -->
        <grant permission="bungeni.response.View" role="bungeni.Clerk"/>
        <grant permission="bungeni.response.View" role="bungeni.Speaker"/>
        <grant permission="bungeni.response.View" role="bungeni.Owner"/>
        <grant permission="bungeni.response.View" role="bungeni.Signatory"/>
        <grant permission="bungeni.response.View" role="bungeni.MP"/>
        <grant permission="bungeni.response.View" role="bungeni.Minister"/>
        <grant permission="bungeni.response.View" role="bungeni.Anonymous"/>
    </state>
    <state id="deferred" title="Deferred" like_state="admissible" tags="public approved"/>
    <state id="debated" title="Debated" like_state="admissible" tags="public terminal succeed">
        <!-- event -->
        <deny permission="bungeni.event.Edit" role="bungeni.Clerk"/>
        <deny permission="bungeni.event.Edit" role="bungeni.Speaker"/>
        <deny permission="bungeni.event.Add" role="bungeni.Clerk"/>
        <deny permission="bungeni.event.Add" role="bungeni.Speaker"/>
        <deny permission="bungeni.event.Delete" role="bungeni.Clerk"/>
        <deny permission="bungeni.event.Delete" role="bungeni.Speaker"/>
    </state>
    <state id="elapsed" title="Elapsed" like_state="debated" tags="public terminal fail"/>
    <state id="dropped" title="Dropped" like_state="debated" tags="public terminal fail"/>
    <state id="withdrawn_internal" title="Withdrawn" like_state="submitted" tags="terminal fail">
        <!-- event -->
        <deny permission="bungeni.event.Edit" role="bungeni.Clerk"/>
        <deny permission="bungeni.event.Edit" role="bungeni.Speaker"/>
        <deny permission="bungeni.event.Add" role="bungeni.Clerk"/>
        <deny permission="bungeni.event.Add" role="bungeni.Speaker"/>
        <deny permission="bungeni.event.Delete" role="bungeni.Clerk"/>
        <deny permission="bungeni.event.Delete" role="bungeni.Speaker"/>
    </state>
    <state id="withdrawn" title="Withdrawn" like_state="debated" tags="public terminal fail"/>
    <transition title="Create Question" source="" destination="draft" condition="user_is_context_owner" trigger="automatic" order="0"/>
    <transition title="Create Question (On behalf of)" source="" destination="working_draft" condition="user_is_not_context_owner" trigger="automatic" order="0"/>
    <transition title="Submit" source="draft redraft submitted_signatories" destination="submitted" condition="pi_signatories_check" trigger="manual" roles="bungeni.Owner" order="1"/>
    <transition title="Submit" source="working_draft" destination="submitted" condition="pi_signatories_check" trigger="manual" roles="bungeni.Clerk" order="1"/>
    <transition title="Submit to Signatories" source="draft redraft" destination="submitted_signatories" condition="pi_has_signatories" trigger="manual" roles="bungeni.Owner" order="1"/>
    <transition title="Redraft" source="submitted_signatories" destination="redraft" condition="user_is_context_owner" trigger="manual" roles="bungeni.Owner"/>
    <transition title="Drop" source="redraft submitted_signatories" destination="withdrawn_signatory" grouping_unique_sources="withdrawn" condition="user_is_context_owner" trigger="manual" roles="bungeni.Owner"/>
    <transition title="Receive" source="submitted" destination="received" condition="" trigger="manual" roles="bungeni.Clerk" order="2"/>
    <transition title="Require Clarification to Receive" source="received incomplete" destination="clarification_required" condition="" trigger="manual" roles="bungeni.Clerk" order="3" require_confirmation="true"/>
    <transition title="Redraft (Automatic)" source="clarification_required" destination="redraft" condition="pi_has_signatories" trigger="automatic" note="incomplete document needs to be resubmitted to signatories"/>
    <transition title="Complete" source="received" destination="completed" condition="" trigger="manual" roles="bungeni.Clerk" order="4" note="The Question has all the formal requirements; forwarded to the             Speaker's Office as well as to the Ministry for pre-viewing (but             will only be able to respond when question is approved)."/>
    <transition title="Approve" source="completed" destination="admissible" condition="" trigger="manual" roles="bungeni.Speaker" order="6"/>
    <transition title="Disapprove" source="completed" destination="inadmissible" condition="" trigger="manual" roles="bungeni.Speaker" order="7" require_confirmation="true"/>
    <transition title="Require Recomplete to Approve" source="completed" destination="incomplete" condition="" trigger="manual" roles="bungeni.Speaker" order="8" require_confirmation="true"/>
    <transition title="Recomplete" source="incomplete" destination="completed" condition="" trigger="manual" roles="bungeni.Clerk" order="9"/>
    <transition title="Resubmit" source="clarification_required" destination="submitted" condition="" trigger="manual" roles="bungeni.Owner" order="10"/>
    <transition title="Make available for scheduling" source="admissible deferred adjourned" destination="schedule_pending" condition="is_oral_response" trigger="manual" roles="bungeni.Clerk" order="11"/>
    <transition title="Reschedule" source="scheduled" destination="schedule_pending" trigger="system" roles="bungeni.Clerk"/>
    <transition title="Schedule" source="schedule_pending" destination="scheduled" condition="is_scheduled" trigger="system" roles="bungeni.Clerk" order="12"/>
    <transition title="Send to Ministry" source="admissible deferred" destination="response_pending" condition="is_written_response" trigger="manual" roles="bungeni.Clerk" order="13" note="Written-response questions are never scheduled but must be              answered directly by the Ministry."/>
    <transition title="Submit Response" source="response_pending" destination="response_submitted" condition="response_allow_submit" trigger="manual" roles="bungeni.Minister" order="15"/>
    <transition title="Redraft Response" source="response_submitted" destination="response_pending" condition="" trigger="manual" roles="bungeni.Clerk" order="16"/>
    <transition title="Complete Response" source="response_submitted" destination="response_completed" trigger="manual" roles="bungeni.Clerk" order="17"/>
    <transition title="Elapse" source="response_pending deferred" destination="elapsed" condition="" trigger="manual" roles="bungeni.Clerk" order="18" require_confirmation="true"/>
    <transition title="Defer" source="admissible schedule_pending adjourned" destination="deferred" condition="" trigger="manual" roles="bungeni.Clerk" order="19" note="Oral question, postpone scheduling."/>
    <transition title="Drop" source="scheduled" destination="dropped" condition="" trigger="manual" roles="bungeni.Clerk" order="22"/>
    <transition title="Debate adjourned" source="scheduled" destination="adjourned" condition="" trigger="manual" roles="bungeni.Clerk" order="23"/>
    <transition title="Debated" source="scheduled" destination="debated" trigger="manual" roles="bungeni.Clerk" order="25"/>
    <transition title="Withdraw" source="submitted received completed clarification_required" destination="withdrawn_internal" grouping_unique_sources="withdrawn" condition="" trigger="manual" roles="bungeni.Clerk bungeni.Owner" order="26" require_confirmation="true" note="The MP can withdraw his question at any stage where it can              still be presented to the ministry/house."/>
    <transition title="Withdraw" source="admissible schedule_pending scheduled deferred adjourned" destination="withdrawn" grouping_unique_sources="withdrawn" condition="" trigger="manual" roles="bungeni.Clerk bungeni.Owner" order="27" require_confirmation="true"/>
</workflow>