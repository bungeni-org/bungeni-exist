<?xml version="1.0" encoding="UTF-8"?>
<workflow title="Report Workflow" description="A report" tags="public" permission_actions=".View .Edit .Add .Delete">
    
    <!-- features -->
    <feature name="audit" enabled="true"/>
    <feature name="version" enabled="true"/>
    <feature name="download" enabled="true"/>
    
    <!-- global grants -->
    <grant permission="bungeni.report.Edit" role="bungeni.Clerk"/>
    <grant permission="bungeni.report.Edit" role="bungeni.Speaker"/>
    <state id="published" title="Published" tags="public">
        <grant permission="bungeni.report.View" role="bungeni.Authenticated"/>
        <grant permission="bungeni.report.View" role="bungeni.Anonymous"/>
        <!-- !+PERM_NOT_REG deny permission="bungeni.report.Edit" role="bungeni.Authenticated" /-->
    </state>
    <transition title="Create Report" source="" destination="published" trigger="automatic" order="0"/>
</workflow>