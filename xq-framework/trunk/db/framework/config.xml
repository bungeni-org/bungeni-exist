<fw-config default-app="bungeni">
    <apps>
        <app name="lexapp">
            <default-tmpl>template.xhtml</default-tmpl>
            <xml-collection>/db/kenyalex</xml-collection>
        </app>
        <app name="bungeni">
            <default-tmpl>portal.html</default-tmpl>
            <xml-collection>/db/bungeni-xml</xml-collection>
        </app>
    </apps>
</fw-config>